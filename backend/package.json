{
  "name": "opla-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Opla.ai Backend",
  "main": "index.js",
  "author": "Mik BRY <mik@opla.co>",
  "license": "GPL-2.0+",
  "scripts": {
    "clean-dist": "rm -r -f dist && mkdir dist",
    "compile": "yarn compile:dev && rm -r -f ./dist/config.j*",
    "compile:dev": "yarn clean-dist && babel src -s -D -d dist && cp -f ./package.json ./dist/package.json && cp -f ./LICENSE ./dist/LICENSE && cp -f ./README.md ./dist/README.md",
    "dev": "yarn compile:dev && yarn start:dev",
    "lint": "eslint src tests",
    "lint:dev": "yarn lint --rule 'no-console: off' --fix",
    "prestart": "yarn compile",
    "start": "node dist",
    "start:dev": "nodemon -w src --exec \"babel-node src \"",
    "migrate": "flyway -configFiles=config/flyway.conf migrate",
    "test": "jest"
  },
  "keywords": [
    "Node",
    "ES7",
    "OAuth2"
  ],
  "dependencies": {
    "chalk": "^2.3.1",
    "commander": "^2.14.1",
    "deepmerge": "^2.0.1",
    "figlet": "^1.2.0",
    "fs-extra": "^5.0.0",
    "inquirer": "^5.1.0",
    "node-fetch": "^2.1.2",
    "opennlx": "0.6.1",
    "zoapp-backend": "0.23.5",
    "zoapp-core": "0.12.3",
    "zoauth-server": "0.9.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^22.4.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-jest": "^2.0.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.12.2",
    "eslint-plugin-prettier": "^2.6.0",
    "flywaydb-cli": "^0.5.0",
    "jest": "^22.4.2",
    "nodemon": "^1.13.3",
    "prettier": "^1.11.1",
    "regenerator-runtime": "^0.11.1",
    "shelljs": "^0.8.2",
    "supertest": "^3.0.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^opla-backend/(.*)$": "<rootDir>/src/$1"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/tests/setupTests.js"
  }
}
